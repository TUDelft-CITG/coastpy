{
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88",
        "--experimental-string-processing"
    ],
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
}